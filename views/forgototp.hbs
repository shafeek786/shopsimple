
<!DOCTYPE html>
<html>
<head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
<link rel="stylesheet" href="/css/userCss/main.css" type="text/css">
  <!-- Add Bootstrap CSS CDN link -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    body {
      height: 100vh;
    }
  </style>
</head>
<body>
  <div class="container d-flex justify-content-center align-items-center h-100">
    <div class="position-relative">
      <form action="/forgototpverification" method="post">
        <div class="card p-2 text-center">
          <h6>Please enter the one-time password<br>to verify your account</h6>
          <div>
            <span>OTP has been sent to</span>
            <small>*******@gmail.com</small>
          </div>
          <div id="otp" class="inputs d-flex flex-row justify-content-center mt-2">
            <input class="m-2 text-center form-control rounded" type="text" id="first" name="otp" maxlength="5">
            {{#if data}}
            <input type="hidden" name="email" value="{{data.email}} ">
            {{/if}}
          </div>
          
          {{#if message}}
          <div class="alert alert-danger">
            <strong>{{message}}</strong>
          </div>
          {{/if}}
          <div class="mt-4">
            <button type="submit" class="btn btn-danger px-4 validate">Validate</button>
          </div>
        </div>
      </form>
       {{#if count}}
      <div class="card-2">
        <div class="content d-flex justify-content-center align-items-center">
          <span>Didn't get the code</span>
        
          <a href="/passresendOTP" class="text-decoration-none ms-3">Resend: {{count}}</a>
        <h3 class=" p-2 f-10 " id="time"></h3>
        {{/if}}
        {{#if message1}}
          <p>{{message}}</p>
            {{/if}}
        </div>
      </div>
    </div>
  </div>

  <!-- Add Bootstrap JS CDN link -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>


</body>
<script>
   // set the date we are counting down to
   var countDown = new Date("jan 1, 2027 00:2:00").getTime();
  
   //update the count down in every 1 second
   var update = setInterval(function () {
  
      // get the today's date and time
      var now = new Date().getTime();
    
      //find the difference b/w countDown and now
      var diff = countDown - now;
    
      //now we are calculating time in days, hrs, minutes, and seconds.
    
      var minutes = Math.floor((diff % (1000 * 60 *4)) / (1000 * 60));
      var seconds = Math.floor((diff % (1000 * 60)) / 1000);
    
      //now output the result in an element with id ="time"
      document.getElementById("time").innerHTML =
      minutes + ": " + seconds ;
      if (diff < 0) {
         clearInterval(update);
         document.getElementById("time").innerHTML = "Expired";
      }
   }, 1000);
</script>
</html>


<script src="js/otpverification.js"></script>