



{{>adminHeader}}
  <!--**********************************
            Content body start
        ***********************************-->
  <div class="content-body">

    <div class="container-fluid mt-3">
      <div class="card p-5">
        <div class="container tm-mt-big tm-mb-big">
          <div class="row">
            <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
              <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                  <div class="col-12">
                    <h2 class="tm-block-title d-inline-block">Add Category</h2>
                  </div>
                </div>
                <div class="row tm-edit-product-row">
                  <div class="col-xl-6 col-lg-6 col-md-12">
                    
                  {{#if details}}
                    <form action="/admin/editCategory" method="post">
                          <div class="form-group mb-3">
                            <label for="name">Product Name </label>
                            <input id="name" name="name" value="{{details.NAME}}" type="text" class="form-control validate" required />
                          </div>
                          <div class="form-group mb-3">
                            <label for="description">Description</label>
                            <textarea class="form-control validate" value="{{details.DESCRIPTION}}" rows="3" required name="description"></textarea>
                            <input type="hidden" name="id" value="{{details._id}}">
                          </div>
                          <div class="col-12">
                            <button type="submit" class="btn btn-primary btn-block text-uppercase">Edit Category Now</button>
                          </div>
                             {{#if message}}
               <h3 class="text-danger">{{message}}</h3>
        {{/if}}
                    </form>
                    {{/if}}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>




 
{{>adminFooter}}