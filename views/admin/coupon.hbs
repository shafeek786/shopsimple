{{>adminHeader}}

        <!--**********************************
            Content body start
        ***********************************-->
        <div class="content-body">

            <div class="container-fluid mt-3">
                
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    
                                
   

<div class="container-fluid pt-4 px-4">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
    {{#each couponData}}
    <div class="col mb-4">
      <div class="card h-100">
        <div class="card-header py-3">
          <h5 class="mb-0">Coupon</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Coupon code:
              <span>{{this._doc.code}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Discount percent:
              <span>{{this._doc.discount}}%</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Minimum Purchase Amount:
              <span>{{this.minPurchase}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Maximum Discount:
              <span>{{this.maxDiscount}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Expiry date:
              <span>{{this.expiryDate}}</span>
            </li>
          </ul>

          <a href="/admin/delete_cpn?id={{this._doc._id}}" onclick="deleteCoupon(event)" type="button"
            class="btn btn-secondary btn-sm btn-block mt-3">
            Delete coupon
          </a>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="m-l-auto p-r-15 p-b-15">
    <a href="/admin/addNewCoupon" class="btn btn-primary">Add new coupon</a>
  </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
    <script>
        function deleteCoupon(event) {
            event.preventDefault();

            Swal.fire({
                title: 'Delete Coupon',
                text: 'Are you sure you want to delete this coupon?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Delete',
                cancelButtonText: 'Cancel',
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = event.target.href;
                }
            });
        }
    </script>



    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
